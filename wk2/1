<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Posts</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 20px;
    }
    h1 {
      font-size: 2rem;
      color: #333;
    }
    .post {
      border-bottom: 1px solid #ccc;
      padding: 10px 0;
    }
    .post h2 {
      font-size: 1.5rem;
      margin: 0;
    }
    .post a {
      color: purple;
      text-decoration: none;
    }
    .post a:hover {
      text-decoration: underline;
    }
    .post small {
      color: #555;
    }
  </style>
</head>
<body>
  <h1>Posts</h1>
  <p>You have <span id="postCount">0</span> posts!</p>
  <a href="/create" id="createLink">Create a Post</a>
  
  <div id="posts">
    <!-- Posts will be dynamically loaded here -->
  </div>

  <script>
    async function fetchPosts() {
      const response = await fetch("/posts");
      const posts = await response.json();

      const postsContainer = document.getElementById("posts");
      const postCount = document.getElementById("postCount");

      postCount.textContent = posts.length; // 更新貼文數量

      postsContainer.innerHTML = posts
        .map(
          (post) => `
          <div class="post">
            <h2>${post.title}</h2>
            <a href="/post/${post.id}">Read post</a>
            <br>
            <small>Created at: ${new Date(post.timestamp).toLocaleString("zh-TW", {
              year: "numeric",
              month: "2-digit",
              day: "2-digit",
              hour: "2-digit",
              minute: "2-digit",
              second: "2-digit",
            })}</small>
          </div>
        `
        )
        .join("");
    }

    // Load posts on page load
    fetchPosts();
  </script>
</body>
</html>
